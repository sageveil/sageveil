{
  "name": "@sageveil/site",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "dependencies": {
    "@sageveil/palette": "workspace:*"
  },
  "nx": {
    "targets": {
      "generate-ports": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node tools/scripts/ports-manifest.mjs",
          "cwd": "{workspaceRoot}"
        }
      },
      "build": {
        "dependsOn": [
          "generate-ports"
        ]
      },
      "serve": {
        "dependsOn": [
          "generate-ports"
        ]
      },
      "preview": {
        "dependsOn": [
          "generate-ports"
        ]
      }
    }
  }
}
